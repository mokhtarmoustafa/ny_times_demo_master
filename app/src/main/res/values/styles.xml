<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NYTimesDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_green_500</item>
        <item name="colorOnPrimary">@color/color_yellow_500</item>
        <item name="colorPrimaryDark">@color/color_green_700</item>
        <item name="colorOnSurface">@color/color_black</item>
        <item name="colorAccent">@color/color_green_700</item>
        <item name="colorSurface">@color/color_gray_50</item>
        <item name="colorSecondary">@color/color_yellow_500</item>
        <item name="android:colorBackground">@color/color_green_500</item>
    </style>

    <style name="Theme.color" parent="Theme.NYTimesDemo"/>

    <style name="Theme.color.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.color.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.color.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>